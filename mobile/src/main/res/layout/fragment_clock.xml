<io.github.francoiscampbell.circlelayout.CircleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:cl_angle="30"
    app:cl_angleOffset="90"
    app:cl_centerView="@+id/center"
    app:cl_direction="clockwise"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_0" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_1" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_2" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_4" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_5" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_6" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_7" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_8" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_9" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/cl_btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_input_delete" />

</io.github.francoiscampbell.circlelayout.CircleLayout>

